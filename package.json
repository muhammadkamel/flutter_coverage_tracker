{
  "name": "flutter-coverage-tracker",
  "publisher": "muhammadkamel",
  "displayName": "Flutter Coverage Tracker",
  "description": "Tracks and displays Flutter test coverage in the status bar.",
  "version": "0.17.0",
  "icon": "resources/icons/flutter_coverage_tracker_logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/muhammadkamel/flutter_coverage_tracker"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flutter-coverage-tracker.runRelatedTest",
        "title": "Run Related Test",
        "category": "Flutter Coverage Tracker"
      },
      {
        "command": "flutter-coverage-tracker.runFolderTests",
        "title": "Run Folder Tests",
        "category": "Flutter Coverage Tracker"
      },
      {
        "command": "flutter-coverage-tracker.runChangedTests",
        "title": "Run Tests for Changed Files (Git)",
        "category": "Flutter Coverage Tracker"
      },
      {
        "command": "flutter-coverage-tracker.showDetails",
        "title": "Show Coverage Details",
        "category": "Flutter Coverage Tracker"
      },
      {
        "command": "flutter-coverage-tracker.showFileDiffCoverage",
        "title": "Show Diff Coverage (New Code)",
        "category": "Flutter Coverage Tracker"
      },
      {
        "command": "flutter-coverage-tracker.runTestsAndroid",
        "title": "Run Tests (Android)",
        "category": "Flutter Coverage Tracker"
      },
      {
        "command": "flutter-coverage-tracker.runTestsIOS",
        "title": "Run Tests (iOS)",
        "category": "Flutter Coverage Tracker"
      },
      {
        "command": "flutter-coverage-tracker.runTestsWeb",
        "title": "Run Tests (Web)",
        "category": "Flutter Coverage Tracker"
      },
      {
        "command": "flutter-coverage-tracker.runTestsDesktop",
        "title": "Run Tests (Desktop)",
        "category": "Flutter Coverage Tracker"
      },
      {
        "command": "flutter-coverage-tracker.switchPlatform",
        "title": "Switch Coverage Platform",
        "category": "Flutter Coverage Tracker"
      },
      {
        "command": "flutter-coverage-tracker.viewHistory",
        "title": "View Coverage History",
        "category": "Flutter Coverage Tracker"
      },
      {
        "command": "flutter-coverage-tracker.recordSnapshot",
        "title": "Record Coverage Snapshot",
        "category": "Flutter Coverage Tracker"
      },
      {
        "command": "flutter-coverage-tracker.exportHistory",
        "title": "Export Coverage History",
        "category": "Flutter Coverage Tracker"
      },
      {
        "command": "flutter-coverage-tracker.clearHistory",
        "title": "Clear Coverage History",
        "category": "Flutter Coverage Tracker"
      },
      {
        "command": "flutter-coverage-tracker.jumpToTestOrImpl",
        "title": "Jump to Test/Implementation",
        "category": "Flutter Coverage Tracker"
      }
    ],
    "configuration": {
      "title": "Flutter Coverage Tracker",
      "properties": {
        "flutterCoverage.coverageFilePath": {
          "type": "string",
          "default": "coverage/lcov.info",
          "description": "Path to the lcov.info file relative to the workspace root."
        },
        "flutterCoverage.excludedFileExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".g.dart",
            ".freezed.dart"
          ],
          "description": "File extensions to exclude from automatic test generation (e.g., generated files from build_runner)."
        },
        "flutterCoverage.showGutterCoverage": {
          "type": "boolean",
          "default": true,
          "description": "Show coverage indicators in the editor gutter."
        },
        "flutterCoverage.coveredGutterStyle": {
          "type": "string",
          "enum": [
            "green",
            "blue"
          ],
          "default": "green",
          "description": "Color style for covered lines in the gutter."
        },
        "flutterCoverage.uncoveredGutterStyle": {
          "type": "string",
          "enum": [
            "red",
            "orange"
          ],
          "default": "red",
          "description": "Color style for uncovered lines in the gutter."
        },
        "flutterCoverage.defaultPlatform": {
          "type": "string",
          "enum": [
            "all",
            "android",
            "ios",
            "web",
            "desktop"
          ],
          "default": "all",
          "description": "Default platform for coverage display."
        },
        "flutterCoverage.platformCoveragePaths": {
          "type": "object",
          "default": {
            "android": "coverage/android/lcov.info",
            "ios": "coverage/ios/lcov.info",
            "web": "coverage/web/lcov.info",
            "desktop": "coverage/desktop/lcov.info",
            "all": "coverage/lcov.info"
          },
          "description": "Coverage file paths for each platform."
        },
        "flutterCoverage.historyEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable coverage history tracking."
        },
        "flutterCoverage.historyRetentionDays": {
          "type": "number",
          "default": 90,
          "description": "Number of days to retain coverage history."
        },
        "flutterCoverage.historyAutoRecord": {
          "type": "boolean",
          "default": true,
          "description": "Automatically record snapshots on coverage updates."
        },
        "flutterCoverage.historyMaxSnapshots": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of snapshots to keep."
        },
        "flutterCoverage.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable Code Lens for coverage statistics and test running."
        },
        "flutterCoverage.enableExplorerDecorations": {
          "type": "boolean",
          "default": true,
          "description": "Enable file explorer decorations for coverage status."
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "flutter-coverage-tracker.runRelatedTest",
          "group": "flutter_coverage_tracker",
          "when": "resourceLangId == dart"
        },
        {
          "command": "flutter-coverage-tracker.jumpToTestOrImpl",
          "group": "flutter_coverage_tracker",
          "when": "resourceLangId == dart"
        }
      ],
      "editor/title/context": [
        {
          "command": "flutter-coverage-tracker.runRelatedTest",
          "group": "flutter_coverage_tracker",
          "when": "resourceLangId == dart"
        },
        {
          "command": "flutter-coverage-tracker.jumpToTestOrImpl",
          "group": "flutter_coverage_tracker",
          "when": "resourceLangId == dart"
        }
      ],
      "explorer/context": [
        {
          "command": "flutter-coverage-tracker.runFolderTests",
          "group": "flutter_coverage_tracker",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "flutter-coverage-tracker.runTestsAndroid",
          "group": "flutter_coverage_tracker",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "flutter-coverage-tracker.runTestsIOS",
          "group": "flutter_coverage_tracker",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "flutter-coverage-tracker.runTestsWeb",
          "group": "flutter_coverage_tracker",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "flutter-coverage-tracker.runTestsDesktop",
          "group": "flutter_coverage_tracker",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "flutter-coverage-tracker.runRelatedTest",
          "group": "flutter_coverage_tracker",
          "when": "resourceLangId == dart"
        },
        {
          "command": "flutter-coverage-tracker.jumpToTestOrImpl",
          "group": "flutter_coverage_tracker",
          "when": "resourceLangId == dart"
        },
        {
          "command": "flutter-coverage-tracker.runChangedTests",
          "group": "flutter_coverage_tracker",
          "when": "explorerResourceIsFolder"
        }
      ],
      "scm/resourceState/context": [
        {
          "command": "flutter-coverage-tracker.runRelatedTest",
          "group": "flutter_coverage_tracker",
          "when": "scmResourceState && resourceLangId == dart"
        },
        {
          "command": "flutter-coverage-tracker.jumpToTestOrImpl",
          "group": "flutter_coverage_tracker",
          "when": "scmResourceState && resourceLangId == dart"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flutter-coverage-tracker-sidebar",
          "title": "Flutter Coverage Tracker",
          "icon": "resources/icons/flutter_coverage_tracker_logo.png"
        }
      ]
    },
    "views": {
      "flutter-coverage-tracker-sidebar": [
        {
          "id": "flutter-coverage-tracker.sidebarView",
          "name": "Dashboard",
          "icon": "resources/icons/flutter_coverage_tracker_logo.png"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run build:css && tsc -p ./",
    "build:css": "postcss src/webview.css -o out/webview.css",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha --ui tdd -r out/test/unit-setup.js out/test/unit/**/*.test.js",
    "coverage": "nyc --reporter=lcov --reporter=text npm run test:unit"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "c8": "^10.1.3",
    "cheerio": "^1.0.0-rc.10",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "postcss-cli": "^11.0.1",
    "sinon": "^21.0.1",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.3",
    "vsce": "^1.103.1"
  },
  "dependencies": {
    "ts-pattern": "^5.9.0"
  }
}