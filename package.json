{
  "name": "flutter-coverage-tracker",
  "publisher": "muhammadkamel",
  "displayName": "Flutter Coverage Tracker",
  "description": "Tracks and displays Flutter test coverage in the status bar.",
  "version": "0.4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/muhammadkamel/flutter_coverage_tracker"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flutter-coverage-tracker.runRelatedTest",
        "title": "Run Related Test",
        "category": "Flutter Coverage"
      }
    ],
    "configuration": {
      "title": "Flutter Coverage Tracker",
      "properties": {
        "flutterCoverage.coverageFilePath": {
          "type": "string",
          "default": "coverage/lcov.info",
          "description": "Path to the lcov.info file relative to the workspace root."
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "flutter-coverage-tracker.runRelatedTest",
          "when": "editorLangId == dart",
          "group": "1_modification"
        }
      ],
      "explorer/context": [
        {
          "command": "flutter-coverage-tracker.runRelatedTest",
          "when": "resourceExtname == .dart",
          "group": "7_modification"
        }
      ],
      "editor/title/context": [
        {
          "command": "flutter-coverage-tracker.runRelatedTest",
          "when": "resourceExtname == .dart",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run build:css && tsc -p ./",
    "build:css": "postcss src/webview.css -o out/webview.css",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "cheerio": "^1.0.0-rc.10",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.1.3",
    "vsce": "^1.103.1"
  }
}